[push]
  default = matching

[core]
  trustctime = false
  editor = vim
  filemode = false

[color]
  ui = always

[credential]
  helper = cache --timeout=3600

[merge]
  tool = vimdiff

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[mergetool]
  keeptemporaries = false
  keepbackups = false
  prompt = false
  trustexitcode = false

[delta]
  side-by-side = true
  commit-decoration-style = bold box ul
  dark = true
  file-decoration-style = none
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = "#d79921" box
  hunk-header-file-style = "#999999"
  hunk-header-line-number-style = bold "#98971a"
  hunk-header-style = file line-number syntax
  line-numbers-left-style = "#022b45"
  line-numbers-minus-style = "#458588"
  line-numbers-plus-style = "#d65d0e"
  line-numbers-right-style = "#022b45"
  line-numbers-zero-style = "#999999"
  minus-emph-style = normal "#458588"
  minus-style = normal "#001a00"
  plus-emph-style = syntax "#d65d0e"
  plus-style = syntax "#001a00"
  syntax-theme = 1337
  zero-style = syntax

[alias]
  last = log -1 --stat
  cp = cherry-pick
  co = checkout
  cl = clone
  ci = commit
  st = status -sb
  br = branch
  unstage = reset HEAD --
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  unadd = reset HEAD
  fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"

[includeIf "gitdir:~/workspace/private/"]
  path = ~/workspace/private/.gitconfig
[includeIf "gitdir:~/.local/share/chezmoi/"]
  path = ~/workspace/private/.gitconfig
[includeIf "gitdir:~/workspace/work/"]
  path = ~/workspace/work/.gitconfig

[gpg]
  program = gpg

[fetch]
  prune = true

[init]
	defaultBranch = main
