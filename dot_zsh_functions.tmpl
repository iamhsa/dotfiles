function toggle-transient-prompt() {
  if [[ $POWERLEVEL9K_TRANSIENT_PROMPT != off ]]; then
    POWERLEVEL9K_TRANSIENT_PROMPT=off
  else
    POWERLEVEL9K_TRANSIENT_PROMPT=always
  fi
  p10k reload
}

